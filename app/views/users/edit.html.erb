<div class = "edit">

  <div class = "row">
    <h3>Change User Name</h3>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= link_to "Back to Profile", @user %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-md-4">
      <%= form_for(@user) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.submit 'edit', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= link_to "Delete Profile", @user, method: :delete, class: "delete-btn" %>
    </div>
  </div>

</div>