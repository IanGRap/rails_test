<% provide(:title, 'Update Profile') %>

<div class = "nav">
  <div class="row">
    <div class="col-md-offset-1">
      <%= link_to "Back to Profile", @user%>
    </div>
  </div>
</div>

<div class = "row">
  <div class = 'col-md-offset-3 sub_title''>
    <span> Enter your new info </span>
  </div>
</div>

<div class = "row">

  <div class = "col-md-1 col-md-offset-3">
    <div class = 'sidebar'>
      <%= link_to "Delete Profile", @user, method: :delete, class: "btn delete" %>
    </div>
  </div>

  <div class = 'col-md-4'>
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit 'edit', class: "btn" %>

    <% end %>
  </div>

</div>