<% provide(:title, 'Update Project') %>

<div class = "nav">
  <div class="row">
    <div class="col-md-offset-1">
      <%= link_to "Back to Project", @project%>
    </div>
  </div>
</div>

<div class = "row">
  <div class = 'col-md-offset-3 sub_title''>
    <span> Enter your new info </span>
  </div>
</div>

<div class = "row">

  <div class = "col-md-1 col-md-offset-3">
    <div class = 'sidebar'>
      <%= link_to "Delete Project", @project, method: :delete, class: "btn delete" %>
    </div>
  </div>

  <div class = 'col-md-4'>

      <%= form_for(@project) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.submit 'update project', class: "btn btn-primary" %>

      <% end %>
  </div>

</div>