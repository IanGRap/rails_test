<!DOCTYPE html>
<html>
  <head>
    <title>MyApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Debug -->
    <% if logged_in? %>
    <%= link_to "Logout", logout_path %>>
    <% else %>
    <p>No current user logged in</p>
    <% end %>
    <% if project_set? %>
    <p>Current project id: <% current_project.id %>></p>
    <% else %>
    <p>No current project set</p>
    <% end %>

    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
